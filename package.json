{
  "name": "extract-i18n",
  "displayName": "Extract-i18n",
  "description": "extract the translation",
  "version": "0.0.5",
  "publisher": "heruiwoniou",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extract-i18n.extract-text",
    "onCommand:extract-i18n.extract-text-with-auto-brace",
    "onCommand:extract-i18n.modifyPrefix",
    "onCommand:extract-i18n.modifyTarget",
    "onCommand:extract-i18n.modifyTemplate"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extract-i18n.extract-text",
        "title": "Extract Text"
      },
      {
        "command": "extract-i18n.extract-text-with-auto-brace",
        "title": "Extract Text With Auto Brace Wrapper"
      },
      {
        "command": "extract-i18n.modifyPrefix",
        "title": "Extract Modify Prefix"
      },
      {
        "command": "extract-i18n.modifyTarget",
        "title": "Extract Modify Target"
      },
      {
        "command": "extract-i18n.modifyTemplate",
        "title": "Extract Modify Template"
      }
    ],
    "configuration": {
      "id": "extract-i18n",
      "title": "Extract i18n",
      "properties": {
        "extract-i18n.pattern": {
          "type": "string",
          "default": "**/locales",
          "description": "The pattern to extract i18n folders"
        },
        "extract-i18n.prefix": {
          "type": "string",
          "default": "extract-i18n",
          "description": "The prefix of the extracted string"
        },
        "extract-i18n.target": {
          "type": "array",
          "default": [
            "en",
            "zh"
          ],
          "description": "The exported target language file"
        },
        "extract-i18n.template": {
          "type": "string",
          "default": "t(\"{{key}}\")",
          "description": "The template of the extracted string"
        },
        "extract-i18n.langsMap": {
          "type": "object",
          "default": {
            "zh": "zh-cn"
          },
          "description": "Value is used to convert to a language known by the Google API eg: cn (target filename) -> zh-cn"
        }
      }
    }
  },
  "scripts": {
    "setup": "npm install && npx simple-git-hooks",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "lint-staged": "lint-staged",
    "commit": "cz",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@vscode/test-electron": "^2.1.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "camelcase": "^6.3.0",
    "chokidar": "^3.5.3",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "google-translate-api": "^2.3.0",
    "standard-version": "^9.3.2",
    "translate-google": "^1.5.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged --concurrent false",
    "commit-msg": "npx --no-install commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.js": [
      "eslint --ext .js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
